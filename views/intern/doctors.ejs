<form method="GET" action="/search_doc">
<!-- main content start -->
<div class="main-content">
      <!-- content -->
    <div class="container-fluid content-top-gap">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Doctors</li>
            </ol>
        </nav>
        <!--<div class="welcome-msg pt-3 pb-4">-->
        <!--<h1>Hi <span class="text-primary">John</span>, Welcome back</h1>-->
        <!--<p>Very detailed & featured admin.</p>-->
        <!--</div>-->

        <!-- statistics data -->
        <div class="statistics">
            <div class="row">
                <div class="col-xl-6 pr-xl-2">
                    <div class="row">
                        <div class="col-sm-6 pr-sm-2 statistics-grid">
                            <div class="card card_border border-primary-top p-4">
                                <i class="lnr lnr-users"> </i>
                                <h3 class="text-primary number"><%=tot_user%></h3>
                                <p class="stat-text">Total Users</p>
                            </div>
                        </div>
                        <div class="col-sm-6 pl-sm-2 statistics-grid">
                            <div class="card card_border border-primary-top p-4">
                                <i class="lnr lnr-plus-circle"> </i>
                                <h3 class="text-secondary number"><%=tot_docs%></h3>
                                <p class="stat-text">Total Doctors</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 pl-xl-2">
                    <div class="row">
                        <div class="col-sm-6 pr-sm-2 statistics-grid">
                            <div class="card card_border border-primary-top p-4">
                                <i class="lnr lnr-cloud-sync"> </i>
                                <h3 class="text-success number"><%=tot_blogs%></h3>
                                <p class="stat-text">Total blogs</p>
                            </div>
                        </div>
                        <div class="col-sm-6 pl-sm-2 statistics-grid">
                            <div class="card card_border border-primary-top p-4">
                                <i class="lnr lnr-list"> </i>
                                <h3 class="text-danger number"><%=type_docs%></h3>
                                <p class="stat-text">Types of doctors</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
          <!-- //statistics data -->
          

        <!-- chatting -->
        <div class="data-tables">
            <div class="row">
                <div class="col-lg-12 chart-grid mb-4">
                    <div class="card card_border p-4">

                        <!-- <div class="messaging">
                             <div class="inbox_msg"> -->

                        <!-- <div class="col-md-auto mesgs">
                            <div class="type_msg">
                                <div class="alert alert-primary" role="alert">
                                    Your Chat with doctors
                                </div>
                            </div>
                            <div class="inbox_chat">

                                <div class="chat_list">
                                    <div class="chat_people">
                                        <div class="chat_img"> <img src="../../images/avatar1.jpg" alt="Anderson" class="img-fluid">
                                        </div>
                                        <div class="chat_ib">
                                            <h5>Anderson <small class="text-info">5 hours</small>
                                                <span class="chat_date"><button type="button" class="btn btn-success btn-sm">Chat!</button></span>
                                            </h5>
                                            <p>Last chat with me.</p>

                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div> -->
                        <!-- <div class="inbox_people" style="width: auto;align-items: center;"> -->
                        <div class="row" style="align-content: center;width:100%;"></div>

                            <div class="col-lg-12">
                                <form>
                                    <div class="headind_srch" style="width: 100%;">
                                        <div class="srch_bar">
                                            <div class="stylish-input-group">
                                                <input type="text" class="search-bar"
                                                       placeholder="Search Doctor or fields of doctor" name="userSearch">
                                                <span class="input-group-addon">
                                                        <button type="submit"> <i class="fa fa-search"
                                                                                  ></i> </button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                                
                                <% for(let data of doc_list) {
                                    %>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="chat_list">
                                            <div class="chat_people">
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="chat_img">
                                                            <% if(data.image === null){ %>
                                                                <img src="../../images/<%= data.gender === 'male' ? 'profile-male.jpg' : 'profile-female.jpeg' %>"
                                                                     alt="<%= data.f_name + " " + data.l_name %>"
                                                                     class="img-fluid">
                                                            <% } else { %>
                                                                <img src="../../images/<%= data.image %>"
                                                                     alt="<%= data.f_name + " " + data.l_name %>"
                                                                     class="img-fluid">
                                                            <% } %>
                                                        </div>
                                                        <div class="chat_ib">
                                                            <h5><%= data.f_name + " " + data.l_name %></h5>
                                                            <p><%=data.email%></p>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-2">
                                                        <button type="button" class="btn btn-dark btn-sm"
                                                                data-toggle="modal" data-target="#chatModal<%=data.user_id%>" id="moreInfo"> more Info
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                            <!-- </div> -->
                            


                            <div class="modal fade" id="chatModal<%=data.user_id%>" tabindex="-1" role="dialog"
                                 aria-labelledby="chatModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="chatModalLabel<%data.user_id%>"><%= data.f_name + " " + data.l_name %></h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="card mb-3" style="max-width: 540px;">
                                                <div class="row no-gutters">
                                                    <div class="col-md-4">
                                                        <% if(data.image === null){ %>
                                                            <img src="../../images/<%= data.gender === 'male' ? 'profile-male.jpg' : 'profile-female.jpeg' %>" class="card-img" alt="<%= data.f_name + " " + data.l_name %>">
                                                        <% } else { %>
                                                            <img src="../../images/<%= data.image %>" class="card-img" alt="<%= data.f_name + " " + data.l_name %>">
                                                        <% } %>
                                                    </div>
                                                    <div class="col-md-8">
                                                        <div class="card-body">
                                                            <h5 class="card-title"><%=data.email%></h5>
                                                            <p class="card-text"><%=data.gender%> </p>
                                                            <p class="card-text">
                                                                <small class="text-muted"><%=data.category%>
                                                                </small>
                                                            </p>
                                                            <p class="card-text">
                                                                <small class="text-muted"><%=data.description%>
                                                                </small>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Doctors information comes here -->
                                        </div>
                                        <div class="modal-footer">
                                            <% if(data.status===1) { %>
                                                <a type="button" class="btn btn-secondary" href="/falsifyDoc?uid=<%=data.user_id %>">falsify</a>
                                            <%} else {%>
                                            <a type="button" class="btn btn-success" href="/verifyUser?uid=<%=data.user_id %>">Verify</a>
                                            <%}%>

                                            <% if(data.status===2) { %>
                                            
                                                <a type="button" class="btn btn-warning" href="/unblockDoctor?uid=<%=data.user_id %>">Unblock</a>
                                            
                                            <%} else {%>
                                                <a type="button" class="btn btn-danger" id="blockUser"
                                                href="/blockDoctor?uid=<%=data.user_id %>"
                                            >Block</a>
                                            <%}%>
                                            <button type="button" class="btn btn-primary" data-dismiss="modal">Close
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                                
                            <%  }%>
                        </div>
                    </div>
                </div>
                <!-- </div> -->
                <!-- </div>
               </div> -->
            </div>
        </div>
    </div>
</div>
<!-- //chatting -->

</div>
<!-- //content -->
</div>
<!-- main content end-->
</section>

</form>
