        <!--</div>-->

        <!-- statistics data -->
        <div class="statistics">
          <div class="row">
              <div class="col-xl-6 pr-xl-2">
                  <div class="row">
                      <div class="col-sm-6 pr-sm-2 statistics-grid">
                          <div class="card card_border border-primary-top p-4">
                              <i class="lnr lnr-users"> </i>
                              <h3 class="text-primary number"><%=tot_user%></h3>
                              <p class="stat-text">Total Users</p>
                          </div>
                      </div>
                      <div class="col-sm-6 pl-sm-2 statistics-grid">
                          <div class="card card_border border-primary-top p-4">
                              <i class="lnr lnr-plus-circle"> </i>
                              <h3 class="text-secondary number"><%=tot_docs%></h3>
                              <p class="stat-text">Total Doctors</p>
                          </div>
                      </div>
                  </div>
              </div>
              <div class="col-xl-6 pl-xl-2">
                  <div class="row">
                      <div class="col-sm-6 pr-sm-2 statistics-grid">
                          <div class="card card_border border-primary-top p-4">
                              <i class="lnr lnr-cloud-sync"> </i>
                              <h3 class="text-success number"><%=tot_blogs%></h3>
                              <p class="stat-text">Total blogs</p>
                          </div>
                      </div>
                      <div class="col-sm-6 pl-sm-2 statistics-grid">
                          <div class="card card_border border-primary-top p-4">
                              <i class="lnr lnr-list"> </i>
                              <h3 class="text-danger number"><%=type_docs%></h3>
                              <p class="stat-text">Types of doctors</p>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
        </div>
        <!-- //statistics data -->
        


        <!-- add blogs -->
        <form method="post" action="/blogs/add_blogs" enctype="multipart/form-data">
          <div class="container bootstrap snippets">
              <div class="row">
                <div class="col-xs-12 col-sm-9">
                  <form class="form-horizontal">
                      <div class="panel panel-default">
                      <div class="panel-heading">
                      <h4 class="panel-title" >ADD BLOGS :</h4>
                      </div>
                      <div class="panel-body">
                       
                        <div class="form-group">
                          <label class="col-sm-4 control-label">Title Of The Blog:</label>
                          <div class="col-sm-10">
                            <input type="text" class="form-control"  name="title" required>
                          </div>
                        </div>
                     
                          <div class="form-group">
                            <label class="col-sm-2 control-label">Description:</label>
                            <div class="col-sm-10">
                              <textarea class="form-control" name="desc" rows="3"  required></textarea>
                            </div>
                          </div>
                          
                          
                        <div class="form-group">
                          <div class="input-group-text">
                          <input type="radio" name="blogscheckbox" value="image">
                          <span
                          class="text-sm-right bg-light font-weight-bolder"
                          style="margin-left: 3px;padding: 3px">  File Input For Img</span><br>
                       
                          <input type="file" accept="image/*" class="form-control-file" name="file">
                        </div>  
                      </div>
                    </div>
                    
                   
                      <div class="form-group">
                        <div class="input-group-text">
                          <input type="radio" name="blogscheckbox" value="text"  checked>
                          <span
                          class="text-sm-right bg-light font-weight-bolder"
                          style="margin-left: 3px;padding: 3px"> Text</span> <br>
                           <div class="col-sm-10">
                           
                           <input type="text" class="form-control" name="add_text">
                          </div>
                        </div>
                       </div>
                      
                        <div class="form-group">
                          <div class="input-group-text">
                           <input type="radio" name="blogscheckbox" value="video" >
                           <span
                           class="text-sm-right bg-light font-weight-bolder"
                           style="margin-left: 3px;padding: 3px"> Link </span> <br>
                            <div class="col-sm-10">
                              <input type="text" class="form-control" name="link1">
                           
                            <div class="valid-feedback">
                              Looks good!
                            </div>
                        </div>
                          </div>
                        </div>      
                         
                        <div class="form-group">
                          <div class="col-sm-10 col-sm-offset-2">
                            <button type="submit" class="btn btn-primary" id="submit_blog_btn">Submit</button>
                            <button type="reset" class="btn btn-default" id="cancle_blog_btn">Cancel</button>
                          </div>
                        </div>
                      </div>
                      </div>
                     </div>
                  </form>
                </div>
              </div>
              </div>
                </div>
    
        <!-- //blogs -->

    </div>
    <!-- //content -->
</div>
<!-- main content end-->
</section>

