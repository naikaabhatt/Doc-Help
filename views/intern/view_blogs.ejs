<%- include('../includes/intern/Navigation-main'); %>

<!-- main content start -->
<div class="main-content">

    <!-- content -->
    <div class="container-fluid content-top-gap">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/blog_update">blogs</a></li>
                <li class="breadcrumb-item active" aria-current="page">view blog</li>
            </ol>
        </nav>
        <!--<div class="welcome-msg pt-3 pb-4">-->
        <!--<h1>Hi <span class="text-primary">John</span>, Welcome back</h1>-->
        <!--<p>Very detailed & featured admin.</p>-->
        <!--</div>-->

        <!-- statistics data -->
        <div class="statistics">
            <div class="row">
                <div class="col-xl-6 pr-xl-2">
                    <div class="row">
                        <div class="col-sm-6 pr-sm-2 statistics-grid">
                            <div class="card card_border border-primary-top p-4">
                                <i class="lnr lnr-users"> </i>
                                <h3 class="text-primary number"><%=tot_user%></h3>
                                <p class="stat-text">Total Users</p>
                            </div>
                        </div>
                        <div class="col-sm-6 pl-sm-2 statistics-grid">
                            <div class="card card_border border-primary-top p-4">
                                <i class="lnr lnr-plus-circle"> </i>
                                <h3 class="text-secondary number"><%=tot_docs%></h3>
                                <p class="stat-text">Total Doctors</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 pl-xl-2">
                    <div class="row">
                        <div class="col-sm-6 pr-sm-2 statistics-grid">
                            <div class="card card_border border-primary-top p-4">
                                <i class="lnr lnr-cloud-sync"> </i>
                                <h3 class="text-success number"><%=tot_blogs%></h3>
                                <p class="stat-text">Total blogs</p>
                            </div>
                        </div>
                        <div class="col-sm-6 pl-sm-2 statistics-grid">
                            <div class="card card_border border-primary-top p-4">
                                <i class="lnr lnr-list"> </i>
                                <h3 class="text-danger number"><%=type_docs%></h3>
                                <p class="stat-text">Types of doctors</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
          <!-- //statistics data -->
          

        <form method="post" action="/update_blog" enctype="multipart/form-data">
            <div class="data-tables">
                <div class="row">
                    <div class="col-lg-12 chart-grid mb-4">
                        <div class="card card_border p-4">
 
                            <input type="text" name="media_id" value="<%= media[0].media_id %>" hidden>
                            <h2 class="card-title"><%= media[0].media_title %></h2>
                            <div class="col-md-4 mb-2">
                                <label class="control-label font-weight-bold" for="regular1">Title Of The Blog</label>
                                <input type="text" class="form-control" value="<%= media[0].media_title %>" name="title"
                                       required>
                            </div>
                            <br/>
                            <div class="col-md-8  mb-4 ">
                                <label for="exampleFormControlTextarea1" class="font-weight-bold">Description About
                                    Blogs</label>
                                <textarea class="form-control" id="validationCustom08" name="desc" rows="2"
                                          required><%= media[0].media_desc %></textarea>
                            </div>
                            <% if(media[0].media_type === 'video') { %>
                                <div class="col-md-8  mb-4 ">
                                    <label class="control-label font-weight-bold" for="regular1">Video Link</label>
                                    <input type="text" class="form-control" value="<%=media[0].media %>" name="link1">
                                    <br/>
                                    <div class="embed-responsive embed-responsive-16by9">
                                        <iframe class="embed-responsive-item" src="<%=media[0].media%>" allowfullscreen></iframe>
                                    </div>
                                </div>

                            <!--<div class="card mb-4">-->
                                <!--<iframe class="embed-responsive-item" src="<%=media[0].media%>" ></iframe>-->
                            <!--</div>-->
                            <% } %>

                            <% if(media[0].media_type === 'image') { %>
                                <div class="col-md-8  mb-4 ">
                                    <label class="control-label font-weight-bold" for="regular1">Image</label>
                                    <input type="file" accept="image/*" class="form-control-file" name="file">
                                </div>
                                <div class="card" style="width: 18rem;">
                                    <img src="../../blog/<%=media[0].media%>" class="card-img-top" alt="<%=media[0].media%>">
                                </div>
                            <% } %>

                            <br/>
                            <button type="submit" class="btn btn-success">Update</button>
                        </div>

                    </div>
                </div>
            </div>
        </form>

        <!-- blogs -->
        <div class="container">
            <div class="row">
                <div class="col">
                    <div id="text">

                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- //content -->
</div>
<!-- main content end-->
</div>
</section>

<%- include('../includes/intern/footer'); %>